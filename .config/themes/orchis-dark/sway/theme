# Apply gtk theming
exec_always ~/.config/sway/scripts/import-gsettings

# gtk mouse coursor theme
seat seat0 xcursor_theme Bibata-Modern-Ice 20

# Set inner/outer gaps
gaps inner 2
gaps outer 2

# Hide titlebar on windows:
default_border pixel 1

# Default Font
font pango:Noto Sans Regular 9

# Thin borders:
smart_borders on

# Set wallpaper:
exec ~/.azotebg

# Title format for windows
for_window [shell="xdg_shell"] title_format "%title (%app_id)"
for_window [shell="x_wayland"] title_format "%class - %title"

# class                 border  bground text    indicator child_border
client.focused          #5294E2 #5294E2 #FFFFFF #5294E2   #5294E2
client.focused_inactive #2E2E2E #2E2E2E #DCDCDC #2E2E2E   #2E2E2E
client.unfocused        #1E1E1E #1E1E1E #AAAAAA #1E1E1E   #1E1E1E
client.urgent           #FF5555 #FF5555 #FFFFFF #FF5555   #FF5555
client.placeholder      #1E1E1E #1E1E1E #FFFFFF #1E1E1E   #1E1E1E
client.background       #1E1E1E

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    swaybar_command waybar
}
