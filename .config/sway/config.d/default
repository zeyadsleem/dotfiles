# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Add Vim key support
set $left h
set $down j
set $up k
set $right l

# Set default terminal emulator
# Appearance
font pango:JetBrainsMono Nerd Font 10

# Basic definitions
set $term wezterm

# Application launcher
set $launcher fuzzel

# Application menu
set $menu nwg-drawer -term wezterm

# Power Menu
set $powermenu ~/.config/sway/scripts/power_menu.sh

### Key bindings
#
# Basics:
#
    # Launch the terminal
    bindsym --to-code $mod+Return exec $term

    # Open the power menu
    bindsym --to-code $mod+Shift+e exec $powermenu

    # Kill focused window
    bindsym --to-code $mod+q kill

    # Start your launcher
    bindsym --to-code $mod+d exec $launcher

    # Menu
    bindsym --to-code $mod+Shift+d exec $menu

    # Lock screen
    bindsym --to-code $mod+f1 exec gtklock

    # Activities
    bindsym --to-code $mod+p exec cerebro

    # Move windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Change "normal" to "inverse" to switch left and right
    floating_modifier $mod normal

    # Reload the configuration file
    bindsym --to-code $mod+Shift+r reload

    # Toggle Waybar visibility
    bindsym --to-code $mod+grave exec pkill -SIGUSR1 waybar

#
# Moving around:
#
    bindsym --to-code {
        # Change window focus
        $mod+Left focus left
        $mod+Down focus down
        $mod+Up focus up
        $mod+Right focus right
        # Vim key support
        $mod+$left focus left
        $mod+$down focus down
        $mod+$up focus up
        $mod+$right focus right

        # Move the focused window
        $mod+Shift+Left move left
        $mod+Shift+Down move down
        $mod+Shift+Up move up
        $mod+Shift+Right move right
        # Vim key support
        $mod+Shift+$left move left
        $mod+Shift+$down move down
        $mod+Shift+$up move up
        $mod+Shift+$right move right
    }

#
# Workspaces:
#
    # Workspace bindings are using bindcode instead of bindsym for better Azerty compatibility.
    # https://github.com/EndeavourOS-Community-Editions/sway/pull/81
    # Use wev to find keycodes for setting up other bindings this way.

    bindcode {
        # Switch to workspace
        $mod+10 workspace number 1
        $mod+11 workspace number 2
        $mod+12 workspace number 3
        $mod+13 workspace number 4
        $mod+14 workspace number 5
        $mod+15 workspace number 6
        $mod+16 workspace number 7
        $mod+17 workspace number 8
        $mod+18 workspace number 9
        $mod+19 workspace number 10

        # Move focused container to workspace
        $mod+Shift+10 move container to workspace number 1
        $mod+Shift+11 move container to workspace number 2
        $mod+Shift+12 move container to workspace number 3
        $mod+Shift+13 move container to workspace number 4
        $mod+Shift+14 move container to workspace number 5
        $mod+Shift+15 move container to workspace number 6
        $mod+Shift+16 move container to workspace number 7
        $mod+Shift+17 move container to workspace number 8
        $mod+Shift+18 move container to workspace number 9
        $mod+Shift+19 move container to workspace number 10
    }
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.

#
# Layout stuff:
#
    # Set how the current window will be split
    # Split the window vertically
    bindsym --to-code $mod+v splitv
    # Split the window horizontally
    bindsym --to-code $mod+b splith

    # Switch the current container between different layout styles
    bindsym --to-code $mod+s layout stacking
    bindsym --to-code $mod+w layout tabbed
    bindsym --to-code $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym --to-code $mod+f fullscreen

    # Toggle between tiling and floating mode
    bindsym --to-code $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    # bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym --to-code $mod+a focus parent

#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym --to-code $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym --to-code $mod+minus scratchpad show

#
# Resizing containers:
#
    bindsym --to-code {
        # Resize with arrow keys
        $mod+ctrl+Right resize shrink width 10 px
        $mod+ctrl+Up resize grow height 10 px
        $mod+ctrl+Down resize shrink height 10 px
        $mod+ctrl+Left resize grow width 10 px
        # Resize with Vim keys
        $mod+ctrl+$right resize shrink width 10 px
        $mod+ctrl+$up resize grow height 10 px
        $mod+ctrl+$down resize shrink height 10 px
        $mod+ctrl+$left resize grow width 10 px
    }

    # Resize floating windows with mouse scroll:
    bindsym --to-code --whole-window --border {
        # Resize vertically
        $mod+button4 resize shrink height 5 px or 5 ppt
        $mod+button5 resize grow height 5 px or 5 ppt
        # Resize horizontally
        $mod+Shift+button4 resize shrink width 5 px or 5 ppt
        $mod+Shift+button5 resize grow width 5 px or 5 ppt
    }

#
# Media Keys
#
# Volume
bindsym --locked XF86AudioRaiseVolume exec swayosd-client --output-volume raise
bindsym --locked XF86AudioLowerVolume exec swayosd-client --output-volume lower
bindsym --locked XF86AudioMute exec swayosd-client --output-volume mute-toggle

# Player
bindsym --locked XF86AudioPlay exec playerctl play-pause
bindsym --locked XF86AudioNext exec playerctl next
bindsym --locked XF86AudioPrev exec playerctl previous

# Backlight
bindsym --locked XF86MonBrightnessUp exec swayosd-client --brightness raise
bindsym --locked XF86MonBrightnessDown exec swayosd-client --brightness lower

# Put system to sleep
bindsym XF86Sleep exec systemctl suspend

#
# App shortcuts
#
    # Launch the file explorer
    bindsym --to-code $mod+n exec thunar

    # Launch the browser
    bindsym --to-code $mod+o exec brave

    # Launch the clipboard manager
    bindsym --to-code $mod+c exec cliphist list | fuzzel -d -w 50 -l 15 -p "Select from clipboard:  " | cliphist decode | wl-copy
    # Delete an entry from the clipboard manager
    bindsym --to-code $mod+x exec cliphist list | fuzzel -d -w 50 -l 15 -t cc9393ff -S cc9393ff -p "Select an entry to delete it from cliphist:  "| cliphist delete
    # Note: you can clear all cliphist entries by running `cliphist wipe`

    # Pick a color and copy it to clipboard
    bindsym --to-code $mod+i exec hyprpicker --autocopy

#
# Screenshots - macOS Style (Auto-save + Clipboard)
#
    # Quick selection screenshot (like Cmd+Shift+4) - saves to file + clipboard
    bindsym --to-code print exec ~/.config/sway/scripts/screenshot_area.sh
    
    # Quick full display screenshot (like Cmd+Shift+3) - saves to file + clipboard  
    bindsym --to-code Shift+Print exec ~/.config/sway/scripts/screenshot_full.sh
    
    # Quick window screenshot - saves to file + clipboard
    bindsym --to-code Ctrl+Print exec ~/.config/sway/scripts/screenshot_window_quick.sh
    
    # Annotation mode (old behavior with swappy) - for editing
    bindsym --to-code Alt+Print exec grim -g "$(slurp)" - | swappy -f -

# Emoji picker
    bindsym --to-code $mod+period exec ~/.local/bin/emoji-picker

# Notifications Center
    bindsym --to-code $mod+Shift+n exec swaync-client -t -sw

# Theme Selector
    bindsym --to-code $mod+Shift+t exec ~/.local/bin/set-theme-picker
