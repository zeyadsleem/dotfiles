### Input configuration
#
# Focus Behavior (Like Windows/Mac)
focus_follows_mouse no

# Touchpad configuration
input type:touchpad {
    dwt enabled
    tap enabled
    natural_scroll enabled
    events disabled_on_external_mouse
}

# Enable numlock by default
input type:keyboard xkb_numlock enabled

# Set keyboard layout to US and Arabic
input "type:keyboard" {
    xkb_layout "us,ara"
    xkb_options "grp:alt_shift_toggle"
}

# Switch layout and update Waybar instantly
bindsym $mod+space exec sh -c 'swaymsg input "type:keyboard" xkb_switch_layout next && pkill -RTMIN+1 waybar'
