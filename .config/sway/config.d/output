# main laptop display
output eDP-1 {
    resolution 1366x768
    position 0,0
}

# external display
output HDMI-A-1 {
    resolution 1280x1024
    position 1366,0
}

# disable external display if laptop display is connected
exec_always {
    '[ $(swaymsg -t get_outputs | grep -c "HDMI-A-1") -eq 1 ] && \
    swaymsg output eDP-1 disable && \
    swaymsg output HDMI-A-1 enable || \
    (swaymsg output eDP-1 enable && swaymsg output HDMI-A-1 disable)'
}

# assign workspaces to displays
workspace 1 output HDMI-A-1
workspace 2 output HDMI-A-1
workspace 3 output HDMI-A-1
workspace 4 output HDMI-A-1
workspace 5 output eDP-1
