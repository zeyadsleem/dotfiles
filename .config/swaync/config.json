{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "notification-window-width": 400,
  "notification-icon-size": 52,
  "control-center-width": 440,
  "notification-margin-top": 12,
  "notification-margin-right": 18,
  "layer": "overlay",
  "cssPriority": "application",
  "timeout": 10,
  "timeout-low": 6,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "control-center-margin-top": 12,
  "control-center-margin-bottom": 12,
  "control-center-margin-right": 12,
  "notification-2fa-action": true,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 250,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "title",
    "dnd",
    "notifications",
    "mpris"
  ],
  "widget-config": {
    "title": {
      "text": "الإشعارات",
      "clear-all-button": true,
      "button-text": "مسح الكل"
    },
    "dnd": {
      "text": "وضع عدم الإزعاج"
    },
    "mpris": {
      "image-size": 100,
      "image-radius": 14
    }
  }
}
