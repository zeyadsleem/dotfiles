{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-antigravity-auth@latest"
  ],
  "model": "google/antigravity-gemini-3-flash",
  "small_model": "google/antigravity-gemini-3-flash",
  "default_agent": "orchestrator",
  "agent": {
    "build": {
      "mode": "primary",
      "model": "google/antigravity-gemini-3-flash",
      "temperature": 0.2
    },
    "plan": {
      "mode": "primary",
      "model": "google/antigravity-gemini-3-flash",
      "temperature": 0.1
    }
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "ask",
      "ls*": "allow",
      "fd*": "allow",
      "rg*": "allow",
      "npm*": "allow",
      "bun*": "allow",
      "pnpm*": "allow",
      "yarn*": "allow",
      "node*": "allow",
      "npx*": "allow",
      "cat*": "allow",
      "grep*": "allow",
      "find*": "allow",
      "pwd": "allow",
      "cd *": "allow",
      "mkdir*": "allow",
      "touch*": "allow",
      "cp *": "allow",
      "mv *": "allow",
      "rm *": "allow",
      "rm -rf*": "deny",
      "rm -r /*": "deny",
      "sudo*": "deny",
      "git status*": "allow",
      "git log*": "allow",
      "git diff*": "allow",
      "git add *": "allow",
      "git commit *": "allow",
      "git push --force*": "deny",
      "git push -f*": "deny",
      "git reset --hard*": "deny",
      "curl*": "allow",
      "wget*": "allow",
      "echo*": "allow",
      "printf*": "allow",
      "chmod*": "allow",
      "python*": "allow",
      "pip*": "allow",
      "docker ps*": "allow",
      "docker images*": "allow",
      "docker pull*": "allow",
      "docker build*": "allow",
      "docker run*": "allow",
      "docker-compose*": "allow",
      "shutdown*": "deny",
      "reboot*": "deny",
      "mkfs*": "deny",
      "dd*": "deny"
    },
    "webfetch": "allow"
  },
  "provider": {
    "minimax": {
      "models": {
        "MiniMax-M2.5": {
          "name": "MiniMax M2.5",
          "limit": {
            "context": 1048576,
            "output": 16384
          },
          "modalities": {
            "input": [
              "text"
            ],
            "output": [
              "text"
            ]
          }
        }
      }
    },
    "google": {
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 16384
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "thinkingLevel": "low"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 16384
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "minimal": {
              "thinkingLevel": "minimal"
            },
            "low": {
              "thinkingLevel": "low"
            },
            "medium": {
              "thinkingLevel": "medium"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-claude-opus-4-6-thinking": {
          "name": "Claude Opus 4.6 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 8192
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 4096
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 16384
              }
            }
          }
        },
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash Preview (Gemini CLI)",
          "limit": {
            "context": 1048576,
            "output": 16384
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        }
      }
    }
  },
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest"
      ]
    }
  }
}
