{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-antigravity-auth@latest",
    "opencode-notify@latest",
    "opencode-beads@latest",
    "opencode-mem@latest"
  ],
  "provider": {
    "google": {
      "models": {
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash",
          "limit": { "context": 1048576, "output": 65535 }
        }
      }
    }
  },
  "model": "opencode/kimi-k2.5-free",
  "small_model": "opencode/glm-5-free",
  "default_agent": "build",
  "agent": {
    "build": {
      "mode": "primary",
      "model": "opencode/kimi-k2.5-free",
      "temperature": 0.2,
      "steps": 100
    },
    "plan": {
      "mode": "primary",
      "model": "opencode/glm-5-free",
      "temperature": 0.1,
      "steps": 100
    }
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "allow",
      "rm -rf*": "deny",
      "rm -r /*": "deny",
      "sudo*": "deny",
      "git push --force*": "deny",
      "git push -f*": "deny",
      "git reset --hard*": "deny",
      "shutdown*": "deny",
      "reboot*": "deny",
      "mkfs*": "deny",
      "dd*": "deny"
    },
    "webfetch": "allow"
  },
  "mcp": {}
}
