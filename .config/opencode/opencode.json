{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-antigravity-auth@latest",
    "opencode-notify@latest",
    "opencode-beads@latest",
    "opencode-mem@latest"
  ],
  "provider": {
    "google": {
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": { "context": 1048576, "output": 65535 }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": { "context": 1048576, "output": 65535 }
        },
        "gemini-claude-opus-4-6": {
          "name": "Claude Opus 4.6 (Antigravity)",
          "limit": { "context": 200000, "output": 16384 }
        },
        "antigravity-claude-opus-4-6-thinking": {
          "name": "Claude Opus 4.6 Thinking (Antigravity)",
          "limit": { "context": 200000, "output": 16384 }
        }
      }
    }
  },
  "model": "opencode/kimi-k2.5-free",
  "small_model": "opencode/glm-5-free",
  "default_agent": "build",
  
  "agent": {
    "build": {
      "mode": "primary",
      "model": "opencode/kimi-k2.5-free",
      "temperature": 0.2,
      "steps": 100,
      "description": "Coding + Agent Swarm + Visual development. Combines speed, coordination, and multimodal capabilities."
    },
    "plan": {
      "mode": "primary",
      "model": "google/antigravity-gemini-3-pro",
      "temperature": 0.1,
      "steps": 100,
      "description": "Planning + Deep analysis + Research. Uses 1M context for comprehensive analysis and Deep Think mode."
    }
  },
  
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "allow",
      "rm -rf*": "deny",
      "rm -r /*": "deny",
      "sudo*": "deny",
      "git push --force*": "deny",
      "git push -f*": "deny",
      "git reset --hard*": "deny",
      "shutdown*": "deny",
      "reboot*": "deny",
      "mkfs*": "deny",
      "dd*": "deny"
    },
    "webfetch": "allow"
  },
  "mcp": {}
}
