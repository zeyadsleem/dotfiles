{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-antigravity-auth@latest",
    "opencode-notify@latest",
    "opencode-beads@latest",
    "opencode-mem@latest"
  ],
  "model": "opencode/glm-5-free",
  "small_model": "opencode/glm-5-free",
  "default_agent": "build",
  "agent": {
    "orchestrator": {
      "mode": "primary",
      "model": "opencode/kimi-k2.5-free",
      "temperature": 0.3,
      "steps": 100
    },
    "build": {
      "mode": "primary",
      "model": "opencode/glm-5-free",
      "temperature": 0.2,
      "steps": 100
    },
    "plan": {
      "mode": "primary",
      "model": "google/antigravity-gemini-3-pro",
      "temperature": 0.1,
      "steps": 50
    },
    "code": {
      "model": "opencode/minimax-m2.5-free",
      "temperature": 0.2,
      "steps": 100
    },
    "research": {
      "model": "google/antigravity-gemini-3-pro",
      "temperature": 0.1,
      "steps": 50
    },
    "test": {
      "model": "google/antigravity-gemini-3-flash",
      "temperature": 0.1,
      "steps": 50
    },
    "general": {
      "model": "opencode/glm-5-free",
      "temperature": 0.2,
      "steps": 100
    },
    "deep": {
      "model": "google/antigravity-claude-opus-4-6-thinking",
      "temperature": 0.1,
      "steps": 150
    }
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "allow",
      "rm -rf*": "deny",
      "rm -r /*": "deny",
      "sudo*": "deny",
      "git push --force*": "deny",
      "git push -f*": "deny",
      "git reset --hard*": "deny",
      "shutdown*": "deny",
      "reboot*": "deny",
      "mkfs*": "deny",
      "dd*": "deny"
    },
    "webfetch": "allow"
  },
  "mcp": {}
}
