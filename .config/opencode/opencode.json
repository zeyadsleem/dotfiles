{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-antigravity-auth@latest"
  ],
  "model": "google/antigravity-claude-opus-4-6-thinking",
  "small_model": "google/antigravity-gemini-3-flash",
  "default_agent": "orchestrator",
  "agent": {
    "build": {
      "mode": "primary",
      "model": "google/antigravity-claude-opus-4-6-thinking",
      "temperature": 0.3
    },
    "plan": {
      "mode": "primary",
      "model": "google/antigravity-gemini-3-pro",
      "temperature": 0.2
    }
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "ask",
      "ls*": "allow",
      "cat*": "allow",
      "git status*": "allow",
      "git log*": "allow",
      "git diff*": "allow",
      "grep*": "allow",
      "find*": "allow",
      "rm -rf*": "deny",
      "rm -r /*": "deny",
      "sudo*": "deny",
      "git push --force*": "deny",
      "git push -f*": "deny",
      "git reset --hard*": "deny",
      "shutdown*": "deny",
      "reboot*": "deny",
      "mkfs*": "deny",
      "dd*": "deny"
    },
    "webfetch": "allow"
  },
  "provider": {
    "moonshot-ai": {
      "models": {
        "kimi-k2.5": {
          "name": "Kimi K2.5 (Moonshot AI)",
          "limit": {
            "context": 131072,
            "output": 8192
          }
        },
        "kimi-k2": {
          "name": "Kimi K2 (Moonshot AI)",
          "limit": {
            "context": 131072,
            "output": 8192
          }
        }
      }
    },
    "minimax": {
      "models": {
        "M2.5": {
          "name": "MiniMax M2.5",
          "limit": {
            "context": 245760,
            "output": 16384
          }
        },
        "M2.1": {
          "name": "MiniMax M2.1",
          "limit": {
            "context": 245760,
            "output": 16384
          }
        }
      }
    },
    "google": {
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 16384
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "thinkingLevel": "low"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 16384
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "minimal": {
              "thinkingLevel": "minimal"
            },
            "low": {
              "thinkingLevel": "low"
            },
            "medium": {
              "thinkingLevel": "medium"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 8192
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "antigravity-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 8192
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 4096
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 16384
              }
            }
          }
        },
        "antigravity-claude-opus-4-6-thinking": {
          "name": "Claude Opus 4.6 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 8192
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 4096
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 16384
              }
            }
          }
        },
        "gemini-2.5-flash": {
          "name": "Gemini 2.5 Flash (Gemini CLI)",
          "limit": {
            "context": 1048576,
            "output": 16384
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash Preview (Gemini CLI)",
          "limit": {
            "context": 1048576,
            "output": 16384
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        }
      }
    }
  },
  "mcp": {}
}
